<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin"
		tools:context="com.kiddos.k4remotecontrol.MainActivity">

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/status_fail"
			android:id="@+id/tvServerStatus"
			android:textColor="@color/colorFail"
			android:layout_marginRight="@dimen/item_horizontal_margin"
			android:layout_marginEnd="@dimen/item_horizontal_margin"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"/>
	<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tvServerStatus"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="@dimen/item_horizontal_margin"
			android:layout_marginEnd="@dimen/item_horizontal_margin"
			android:src="@drawable/ic_refresh_black_24dp"
			android:background="@color/colorTransparent"
			android:id="@+id/ibReconnect"/>
	<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/default_ip"
			android:id="@+id/tvServerIP"
			android:inputType="text"
			android:layout_toLeftOf="@id/tvServerStatus"
			android:layout_toStartOf="@id/tvServerStatus"
			android:layout_marginStart="@dimen/item_horizontal_margin"
			android:layout_marginLeft="@dimen/item_horizontal_margin"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"/>
	<RelativeLayout
			android:id="@+id/rlBaseSpeed"
			android:layout_alignParentBottom="true"
			android:layout_width="match_parent"
			android:layout_height="46dp">
		<CheckBox
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:text="@string/lock_text"
				android:id="@+id/cbLock"
				android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true"/>
		<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toLeftOf="@id/cbLock"
				android:layout_toStartOf="@id/cbLock"
				android:layout_alignParentBottom="true"
				android:inputType="number"
				android:id="@+id/etBaseSpeed"
				android:textSize="16sp"
				android:maxEms="3"
				android:ems="3"/>
		<SeekBar
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/sbBaseSpeed"
				android:layout_toLeftOf="@id/etBaseSpeed"
				android:layout_toStartOf="@id/etBaseSpeed"
				android:layout_alignParentBottom="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"/>
	</RelativeLayout>
	<com.kiddos.k4remotecontrol.JoystickView
			android:id="@+id/jvControl"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/tvServerIP"
			android:layout_above="@id/rlBaseSpeed"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:layout_alignParentStart="true"/>
</RelativeLayout>
